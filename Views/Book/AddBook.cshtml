@model B_U2_S1_G1_ES.ViewModels.AddBookViewModel;

@{
    ViewData["Title"] = "Add Books";
}


<form asp-controller ="Book" asp-action="Save" method="post">
   

   

  @*   <input asp-for="Id" type="hidden" /> *@

    <div class="row">
      
        <div class="col-md-8 mb-3">
            <label asp-for="Title" class="form-label">Titolo *</label>
            <input asp-for="Title" class="form-control" placeholder="Inserisci il titolo del libro" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>
    </div>
    <div class="row">

        <!-- Genere -->
        <div class="col-md-8 mb-3">
            <label asp-for="Genre" class="form-label">Genere *</label>
            <input asp-for="Genre" class="form-control" placeholder="Inserisci il Genere del libro" />
            <span asp-validation-for="Genre" class="text-danger small"></span>
        </div>
    </div>

    <div class="row">
        <!-- Autore -->
        <div class="col-md-6 mb-3">
            <label asp-for="Author" class="form-label">Autore *</label>
            <input asp-for="Author" class="form-control" placeholder="Nome dell'autore" />
            <span asp-validation-for="Author" class="text-danger small"></span>
        </div>

        <!-- Copertina (URL) -->
        <div class="col-md-6 mb-3">
            <label asp-for="CoverImage" class="form-label">Copertina (URL) *</label>
            <input asp-for="CoverImage" type="url" class="form-control" placeholder="https://esempio.com/copertina.jpg" />
            <span asp-validation-for="CoverImage" class="text-danger small"></span>
            <small class="text-muted">Inserisci l'URL dell'immagine di copertina</small>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="IsAvailable" class="form-label">Disponibile</label>
            <input asp-for="IsAvailable" type="checkbox" class="form-check-input" />
            <span asp-validation-for="IsAvailable" class="text-danger small"></span>
        </div>
    </div>

    <!-- Pulsanti -->
    <div class="d-flex justify-content-between mt-4">
        <a asp-controller ="Book" asp-action="Index" class="btn btn-secondary">
           Annulla
        </a>
        <button type="submit" class="btn btn-success">
         Salva Libro
        </button>
    </div>
</form>